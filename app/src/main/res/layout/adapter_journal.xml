<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_item"
    android:layout_width="match_parent"
    android:background="@drawable/species_item"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"

        android:text="TextView"

        android:textSize="34dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:layout_height="match_parent"

            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/i_photo"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/photo_icon" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:gravity="right"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/i_video"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/video_icon" />

        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:gravity="right"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
          />

        <ImageView
            android:id="@+id/i_audio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            app:srcCompat="@drawable/mic_icon" />

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="3dp"
         />

        <ImageView
            android:id="@+id/i_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            app:srcCompat="@drawable/note_icon" />
    </LinearLayout>


</LinearLayout>