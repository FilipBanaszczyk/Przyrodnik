<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="29dp">



    <TextView
        android:id="@+id/tv_cat"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"

        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tv_cat"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tv_video"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tv_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_audio"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tv_video"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tv_audio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"

        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_notes"
        />

</androidx.constraintlayout.widget.ConstraintLayout>